<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.aiaccounting" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AI自动记账</name>
    <description>智能AI记账应用，帮助您轻松管理个人财务</description>
    <author email="support@example.com" href="https://example.com">
        AI记账开发团队
    </author>
    <content src="index.html" />
    
    <!-- 权限配置 -->
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#165DFF" />
    <preference name="StatusBarStyle" value="lightcontent" />
    
    <!-- 图标和启动屏 -->
    <icon src="www/img/logo.png" />
    <platform name="android">
        <icon src="www/img/logo.png" density="ldpi" />
        <icon src="www/img/logo.png" density="mdpi" />
        <icon src="www/img/logo.png" density="hdpi" />
        <icon src="www/img/logo.png" density="xhdpi" />
        <icon src="www/img/logo.png" density="xxhdpi" />
        <icon src="www/img/logo.png" density="xxxhdpi" />
    </platform>
    
    <!-- 允许的网络访问 -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />
    
    <!-- 插件配置 -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="2" />
    <plugin name="cordova-plugin-splashscreen" spec="5" />
</widget>
